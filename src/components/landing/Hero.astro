<script is:inline>
    function toggleDarkMode() {
        const elementT = document.documentElement;
        const isDarkMode = elementT.classList.contains("dark");
        
        // Asegúrate de realizar las acciones necesarias según el valor de isDarkMode
        const themeColor = isDarkMode ? '#ffffff' : '#676767';        
          // Actualiza el tema del LogoCAD
          const logoCAD = document.querySelector('LogoCAD');
        if (logoCAD) {
            logoCAD.setAttribute('theme', themeColor);
        }
        // alert(isDarkMode+themeColor);
    }
    
    // Ejecutar cuando se carga la página
    document.addEventListener('DOMContentLoaded', toggleDarkMode);

    // Ejecutar cuando cambia el tema
    document.addEventListener('theme-change', toggleDarkMode);
</script>
