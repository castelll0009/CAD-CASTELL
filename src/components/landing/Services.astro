---
import { services } from '../../config/services.json'
import Layout from '../../layouts/layout.astro';
console.log(services)
---




<div id="services">
    <span class="bg-current flex justify-center align-middle">
        <h6 class="text-5xl font-bold  text-center p-1 pb-2 bg-transparent text-white  ">services</h6>
    </span>
    <!-- wrapper services -->
    <div class="flex flex-col md:flex-row  justify-center justify-center p-20 gap-10">
        {
            services.map((project) => (
            <div class="max-w-sm  p-6  border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700" style="max-width: 200px; background-color: #e0e0e0;">
                <i class={`${project.icon}`}></i>
                <a href="#">
                    <h5 class="mb-2 text-2xl font-semibold tracking-tight text-gray-900">{project.title}</h5>
                </a>
                <p class="mb-3 font-normal text-gray-500 dark:text-gray-400">{project.description}</p>
                <a href="#" class="inline-flex items-center text-blue-600 hover:underline">
                    Got it
                    <svg class="w-3 h-3 ms-2.5 rtl:rotate-[270deg]" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11v4.833A1.166 1.166 0 0 1 13.833 17H2.167A1.167 1.167 0 0 1 1 15.833V4.167A1.166 1.166 0 0 1 2.167 3h4.618m4.447-2H17v5.768M9.111 8.889l7.778-7.778"/>
                    </svg>
                </a>
            </div>
            ))
            
        }
    </div>
   
</div>

